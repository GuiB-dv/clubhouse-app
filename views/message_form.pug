extends layout

block content
  h1= title

  form(method='POST')
    .form-group
      label(for='title') Title: 
      input#title.form-control(type='text' placeholder='Title' name='title' value=(undefined===message ? '' : message.title))
    .form-group
      label(for='message') Write your message:
      input#message.form-control(type='text' placeholder='write here!' name='message'  required value=(undefined===message ? '' : message.message))
    if errors && errors.length
      .alert.alert-danger
        ul
          each error in errors
            li= error.msg

    button.btn.btn-primary(type='submit') Submit