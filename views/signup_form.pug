extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='first_name') First name:
      input#first_name.form-control(type='text' placeholder='first name' name='first_name'  required value=(undefined===user ? '' : user.first_name))
    .form-group
      label(for='last_name') Last name: 
      input#last_name.form-control(type='text' placeholder='last name' name='last_name'  required value=(undefined===user ? '' : user.last_name))
    .form-group
      label(for='username') Username: 
      input#username.form-control(type='text' placeholder='username' name='username'  required value=(undefined===user ? '' : user.username))
    .form-group
      label(for='password') Password:
      ul
        li Min 8 characters
        li Uppercase
        li Number 
        li Symbol 
      input#password.form-control(type='password' placeholder='password' name='password')
    .form-group
      label(for='confirm_password') Confirm your password: 
      input#confirm_password.form-control(type='password' placeholder='confirm your password' name='confirm_password')
    button.btn.btn-primary(type='submit') Submit