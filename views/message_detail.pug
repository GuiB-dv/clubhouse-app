extends layout

block content

  h1 #{message.title}
  if user.membership_status 
    b
      i #{message.author.username} 
    i #{message.timestamp_formatted}
  hr
  p #{message.message}

  if user.admin 
    a(href=message.url + '/edit') Edit message
    p
      hr
      button(type='button', class='btn btn-danger', onclick='showModal()') Delete message
  div(id='myModal', class='modal')
    div(class='modal-content')
      span(class='close', onclick='closeModal()') &times;
      p Are you sure you want to delete this message?
      form(action=message.url + '/delete', method='POST')
        button(type='submit', class='btn btn-primary') Yes
        button(type='button', class='btn btn-secondary', onclick='closeModal()') No

  script
    include /public/javascripts/scripts.js
  link
    include /public/stylesheets/style.css